# ===========================================
# ROSSYBOT ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and fill in your values

# ============ DATABASE ============
DATABASE_URL=postgresql://user:password@localhost:5432/rossybot
REDIS_URL=redis://localhost:6379

# ============ SOLANA APIs ============
# Helius - On-chain data (holder distribution, transaction history)
# Set HELIUS_DISABLED=true when rate limited - uses Birdeye fallback
HELIUS_DISABLED=false
HELIUS_API_KEY=your_helius_api_key
HELIUS_RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_KEY

# Birdeye - Token metrics, security checks, trending tokens
BIRDEYE_API_KEY=your_birdeye_api_key

# ============ TWITTER/X API ============
# IMPORTANT: Set TWITTER_ENABLED=true to activate X/Twitter social analysis
# Without this, social metrics will return empty data and signals will have reduced quality
TWITTER_ENABLED=true

# Option 1: Bearer Token (OAuth 2.0) - Recommended
TWITTER_BEARER_TOKEN=your_bearer_token

# Option 2: Consumer Key/Secret (OAuth 1.0a) - Alternative
# TWITTER_CONSUMER_KEY=your_consumer_key
# TWITTER_CONSUMER_SECRET=your_consumer_secret

# ============ TELEGRAM ============
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# ============ TRADING WALLET ============
# Your Solana wallet private key for auto-trading
# Supports base58 or JSON array format
# WARNING: Keep this secret! Never commit to git!
# Leave empty to disable trading
BOT_WALLET_PRIVATE_KEY=

# ============ SYSTEM ============
NODE_ENV=development
LOG_LEVEL=info

# ============ TRADING CONFIG (Optional) ============
# These have defaults but can be overridden

# Portfolio limits
MAX_MEMECOIN_PORTFOLIO_PERCENT=20
DEFAULT_POSITION_SIZE_PERCENT=2

# Signal limits
MAX_SIGNALS_PER_HOUR=5
MAX_SIGNALS_PER_DAY=20
MIN_SCORE_BUY_SIGNAL=70
MIN_SCORE_WATCH_SIGNAL=55

# Screening criteria (tuned for early entries)
MIN_MARKET_CAP=10000
MAX_MARKET_CAP=25000000
MIN_24H_VOLUME=3000
MIN_VOLUME_MCAP_RATIO=0.05
MIN_HOLDER_COUNT=20
MAX_TOP10_CONCENTRATION=75
MIN_LIQUIDITY_POOL=2000
MIN_TOKEN_AGE_MINUTES=5

# ============ RAILWAY (Production) ============
# Set by Railway automatically
# RAILWAY_PUBLIC_DOMAIN=your-app.railway.app
# PORT=3000
