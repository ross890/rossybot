# ===========================================
# ROSSYBOT ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and fill in your values

# ============ DATABASE ============
DATABASE_URL=postgresql://user:password@localhost:5432/rossybot

# ============ SOLANA APIs ============
# Helius - On-chain data (holder distribution, KOL wallet tracking)
# Set HELIUS_DISABLED=true when rate limited - security checks return permissive defaults
HELIUS_DISABLED=false
HELIUS_API_KEY=your_helius_api_key
HELIUS_RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_KEY

# Solscan Pro - Pump.fun dev wallet monitoring (optional)
# SOLSCAN_API_KEY=your_solscan_api_key

# DexScreener - Token metrics, trending, new listings (FREE, no API key needed)
# Jupiter - Verified token list, recent tokens (FREE, no API key needed)
# RugCheck - Contract safety analysis (FREE, no API key needed)

# ============ TELEGRAM ============
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# ============ TRADING WALLET (Optional) ============
# Your Solana wallet private key for auto-trading
# Supports base58 or JSON array format
# WARNING: Keep this secret! Never commit to git!
# Leave empty to run in signal-only mode (no trading)
BOT_WALLET_PRIVATE_KEY=

# ============ SYSTEM ============
NODE_ENV=development
LOG_LEVEL=info

# ============ STRATEGY TOGGLES ============
# ENABLE_EARLY_STRATEGY=true    # 5min-90min tokens, 20s scan cycle
# ENABLE_MATURE_STRATEGY=true   # 21+ day tokens, 5min scan cycle
# PUMPFUN_DEV_TRACKER_ENABLED=true  # Dev wallet monitoring via Solscan
# LEARNING_MODE=true             # Relaxed filters for data collection

# ============ SIGNAL LIMITS (Optional) ============
# MAX_SIGNALS_PER_HOUR=50
# MAX_SIGNALS_PER_DAY=200
# MIN_SCORE_BUY_SIGNAL=45
# MIN_SCORE_WATCH_SIGNAL=30

# ============ SCREENING (Optional) ============
# MIN_MARKET_CAP=50000
# MAX_MARKET_CAP=25000000
# MIN_24H_VOLUME=500
# MIN_HOLDER_COUNT=5
# MAX_TOP10_CONCENTRATION=90
# MIN_LIQUIDITY_POOL=500
# MIN_TOKEN_AGE_MINUTES=1

# ============ RAILWAY (Production) ============
# Set by Railway automatically
# RAILWAY_PUBLIC_DOMAIN=your-app.railway.app
# PORT=3000
